{
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "dist",
        "sourceMap": false,
        "noImplicitAny": false,
        "declaration": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "esnext"
        ],
        "types": [
            "react"
        ],
        "paths": {
            "@kuindji/observable": [
                "../observable/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tmp/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "dist"
    ]
}